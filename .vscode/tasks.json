{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Flutter App",
			"type": "shell",
			"command": "flutter",
			"args": [
				"build",
				"windows",
				"--debug"
			],
			"group": "build",
			"problemMatcher": [
				"$dart-build_runner"
			],
			"isBackground": false
		},
		{
			"label": "Flutter: Run Web",
			"type": "shell",
			"command": "flutter",
			"args": [
				"run",
				"-d",
				"web-server",
				"--port",
				"8080"
			],
			"group": "build",
			"problemMatcher": [
				"$dart-build_runner"
			],
			"isBackground": true
		}
	]
}